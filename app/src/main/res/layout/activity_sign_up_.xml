<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp_Activity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/LinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@color/colorPrimary"
                    android:orientation="vertical">

                    <ImageView
                        android:contentDescription="@string/app_name"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="10dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/circle"
                        android:src="@drawable/img_register"
                        android:tint="@color/colorWhite" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="REGISTER"
                        android:textColor="@color/colorWhite"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="10dp"
                        android:textSize="22sp" />
                </LinearLayout>

                <ImageView
                    android:contentDescription="@string/app_name"
                    android:id="@+id/UserRegister"
                    android:layout_width="20dp"
                    android:layout_below="@+id/LinearLayout"
                    android:rotation="45"
                    android:layout_marginTop="-10dp"
                    android:layout_height="20dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/square"/>

                <RelativeLayout
                    android:id="@+id/UserNameRelative"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/UserRegister"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imgView_UserIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@color/colorPrimary"
                        android:padding="8dp"
                        android:src="@drawable/img_user"
                        android:tint="@color/colorWhite"
                        />
                    <EditText
                        android:id="@+id/signUserName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Username"
                        android:textSize="15sp"
                        android:inputType="textPersonName"
                        android:paddingLeft="20dp"
                        android:textColorHint="@color/colorWhite"
                        android:layout_toRightOf="@+id/imgView_UserIcon"
                        android:background="@color/colorPrimaryLight"
                        android:layout_alignParentTop="true"
                        android:layout_alignBottom="@+id/imgView_UserIcon"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/passwardRelative"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/UserNameRelative"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imgView_passIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@color/colorPrimary"
                        android:padding="8dp"
                        android:src="@drawable/img_authentication"
                        android:tint="@color/colorWhite"
                        />
                    <EditText
                        android:id="@+id/signPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:textSize="15sp"
                        android:paddingLeft="20dp"
                        android:textColorHint="@color/colorWhite"
                        android:layout_toRightOf="@+id/imgView_passIcon"
                        android:background="@color/colorPrimaryLight"
                        android:layout_alignParentTop="true"
                        android:layout_alignBottom="@+id/imgView_passIcon"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/passAgainRelative"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/passwardRelative"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imgView_passIconAgain"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@color/colorPrimary"
                        android:padding="8dp"
                        android:src="@drawable/img_authentication"
                        android:tint="@color/colorWhite"
                        />
                    <EditText
                        android:id="@+id/signrytypePassward"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Retype Password"
                        android:inputType="textPassword"
                        android:textSize="15sp"
                        android:paddingLeft="20dp"
                        android:textColorHint="@color/colorWhite"
                        android:layout_toRightOf="@+id/imgView_passIconAgain"
                        android:background="@color/colorPrimaryLight"
                        android:layout_alignParentTop="true"
                        android:layout_alignBottom="@+id/imgView_passIconAgain"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/emailRelative"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/passAgainRelative"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imgView_emailIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@color/colorPrimary"
                        android:padding="8dp"
                        android:src="@drawable/img_email"
                        android:tint="@color/colorWhite"
                        />
                    <EditText
                        android:id="@+id/signEmailId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:textSize="15sp"
                        android:paddingLeft="20dp"
                        android:textColorHint="@color/colorWhite"
                        android:layout_toRightOf="@+id/imgView_emailIcon"
                        android:background="@color/colorPrimaryLight"
                        android:layout_alignParentTop="true"
                        android:layout_alignBottom="@+id/imgView_emailIcon"
                        />
                </RelativeLayout>

                <CheckBox
                    android:id="@+id/TermsCheck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/emailRelative"
                    android:text="I agree to the Terms of service."
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    />
                <Button
                    android:id="@+id/signUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/TermsCheck"
                    android:text="SIGN UP"
                    android:textSize="15sp"
                    android:textColor="@color/colorWhite"
                    android:background="@color/colorPrimary"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    />
                <Button
                    android:id="@+id/Already"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/signUp"
                    android:text="Already a Member? Login Here."
                    android:textColor="@color/colorBlack"
                    android:textSize="13sp"
                    android:background="@color/transparent"
                    android:layout_marginTop="15dp"
                    android:layout_centerHorizontal="true"
                    />

            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</ScrollView>