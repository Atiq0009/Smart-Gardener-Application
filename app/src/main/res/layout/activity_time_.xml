<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Time_Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/LinearTimer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/circle"
                        android:padding="10dp"
                        android:src="@drawable/ic_action_time"
                        android:tint="@color/colorWhite" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Time Set"
                        android:textColor="@color/colorWhite"
                        android:textSize="22sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/dummy2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/LinearTimer"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-10dp"
                    android:rotation="45"
                    android:src="@drawable/square" />

                <RelativeLayout
                    android:id="@+id/MorningTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dummy2"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="30dp">

                    <ImageView
                        android:id="@+id/imgView_morning"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@color/colorPrimary"
                        android:padding="8dp"
                        android:src="@drawable/ic_action_morning"
                        android:tint="@color/colorWhite" />

                    <EditText
                        android:id="@+id/timeDCMorning"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/imgView_morning"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/imgView_morning"
                        android:background="@color/colorPrimaryLight"
                        android:hint="Morning"
                        android:inputType="time"
                        android:paddingLeft="20dp"
                        android:textColorHint="@color/colorWhite"
                        android:textSize="15sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/noonTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/MorningTime"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp">

                    <ImageView
                        android:id="@+id/imgView_noon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@color/colorPrimary"
                        android:padding="8dp"
                        android:src="@drawable/ic_action_noon"
                        android:tint="@color/colorWhite" />

                    <EditText
                        android:id="@+id/timeDCNoon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/imgView_noon"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/imgView_noon"
                        android:background="@color/colorPrimaryLight"
                        android:hint="Noon"
                        android:inputType="time"
                        android:paddingLeft="20dp"
                        android:textColorHint="@color/colorWhite"
                        android:textSize="15sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/AfternoonTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/noonTime"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp">

                    <ImageView
                        android:id="@+id/imgView_afternoon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@color/colorPrimary"
                        android:padding="8dp"
                        android:src="@drawable/ic_action_afternoon"
                        android:tint="@color/colorWhite" />

                    <EditText
                        android:id="@+id/timeDCAfternoon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/imgView_afternoon"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/imgView_afternoon"
                        android:background="@color/colorPrimaryLight"
                        android:hint="Afternoon"
                        android:inputType="time"
                        android:paddingLeft="20dp"
                        android:textColorHint="@color/colorWhite"
                        android:textSize="15sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/securityLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/AfternoonTime"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp">

                    <ImageView
                        android:id="@+id/imgView_Security1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@color/colorPrimary"
                        android:padding="8dp"
                        android:src="@drawable/ic_action_security1"
                        android:tint="@color/colorWhite" />

                    <EditText
                        android:id="@+id/timeSecFirst"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/imgView_Security1"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/imgView_Security1"
                        android:background="@color/colorPrimaryLight"
                        android:hint=" 1st Security Check"
                        android:inputType="time"
                        android:paddingLeft="20dp"
                        android:textColorHint="@color/colorWhite"
                        android:textSize="15sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/securityLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/securityLayout1"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp">

                    <ImageView
                        android:id="@+id/imgView_Security2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@color/colorPrimary"
                        android:padding="8dp"
                        android:src="@drawable/ic_action_security2"
                        android:tint="@color/colorWhite" />

                    <EditText
                        android:id="@+id/timeSecSecond"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/imgView_Security2"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/imgView_Security2"
                        android:background="@color/colorPrimaryLight"
                        android:hint="2nd Security Check"
                        android:inputType="time"
                        android:paddingLeft="20dp"
                        android:textColorHint="@color/colorWhite"
                        android:textSize="15sp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="337dp"
                    android:layout_height="200dp"
                    android:layout_below="@+id/securityLayout2"
                    android:layout_marginTop="8dp"
                    android:layout_margin="20dp"

                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/saveTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/colorPrimary"
                        android:text="SAVE TIME"
                        android:textColor="@color/colorWhite"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/BackTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="30dp"
                        android:background="@color/common_google_signin_btn_text_light_disabled"
                        android:text="Back"
                        android:textColor="@color/colorBlack"
                        android:textSize="15sp" />
                </LinearLayout>


            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</ScrollView>